{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "schemas/chaos_profile.schema.json",
  "title": "Chaos Replay Profile",
  "type": "object",
  "required": [
    "schema_version",
    "profile_id",
    "name",
    "enabled",
    "seed",
    "latency_ms",
    "spread_shock_bps",
    "partial_fill_probability",
    "reject_burst_probability",
    "data_gap_probability"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "profile_id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "enabled": {
      "type": "boolean"
    },
    "seed": {
      "type": "integer"
    },
    "latency_ms": {
      "type": "object",
      "properties": {
        "mean": {
          "type": "number",
          "minimum": 0
        },
        "p50": {
          "type": "number",
          "minimum": 0
        },
        "p95": {
          "type": "number",
          "minimum": 0
        },
        "jitter": {
          "type": "number",
          "minimum": 0
        },
        "fill_window_ms": {
          "type": "number",
          "minimum": 0
        }
      },
      "anyOf": [
        {
          "required": [
            "mean",
            "jitter"
          ]
        },
        {
          "required": [
            "p50",
            "p95"
          ]
        }
      ],
      "additionalProperties": true
    },
    "spread_shock_bps": {
      "type": "object",
      "required": [
        "base",
        "burst"
      ],
      "properties": {
        "base": {
          "type": "number",
          "minimum": 0
        },
        "burst": {
          "type": "number",
          "minimum": 0
        },
        "base_p50": {
          "type": "number",
          "minimum": 0
        },
        "burst_p95": {
          "type": "number",
          "minimum": 0
        },
        "burst_probability": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": true
    },
    "partial_fill_probability": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "reject_burst_probability": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "partial_fill_min_ratio": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "partial_fill_max_ratio": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "reject_burst_bars": {
      "type": "object",
      "required": [
        "min",
        "max"
      ],
      "properties": {
        "min": {
          "type": "integer",
          "minimum": 1
        },
        "max": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": true
    },
    "delayed_candle_probability": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "missing_candle_probability": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "data_gap_probability": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "notes": {
      "type": "object"
    }
  },
  "additionalProperties": true
}
